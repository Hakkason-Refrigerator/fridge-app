{
  "expo": {
    "name": "fridge-app",
    "slug": "fridge-app",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/icons/fridge-app-icon.png",
    "userInterfaceStyle": "light",
    "newArchEnabled": true,
    "splash": {
      "image": "./assets/splash-icon.png",
      "resizeMode": "contain",
      "backgroundColor": "#ffffff"
    },
    "ios": {
      "supportsTablet": true,
      "infoPlist": {
        "NSCameraUsageDescription": "食材の期限をカメラで読み取るために使用します",
        "NSPhotoLibraryUsageDescription": "食材の画像を選択するために使用します"
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/icons/fridge-app-icon.png",
        "backgroundColor": "#ffffff"
      },
      "edgeToEdgeEnabled": true,
      "permissions": [
        "CAMERA",
        "READ_EXTERNAL_STORAGE",
        "WRITE_EXTERNAL_STORAGE"
      ]
    },
    "web": {
      "favicon": "./assets/favicon.png"
    },
    "scheme": "fridge-app",
    "experiments": {
      "typedRoutes": true
    }
  }
}
